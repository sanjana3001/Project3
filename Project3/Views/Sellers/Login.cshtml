@model Project3.Models.TblSeller

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>TblSeller</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Sid" />
            <div class="form-group">
                <label asp-for="Sname" class="control-label"></label>
                <input asp-for="Sname" class="form-control" />
                <span asp-validation-for="Sname" classs="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spass" class="control-label"></label>
                <input asp-for="Spass" class="form-control" />
                <span asp-validation-for="Spass" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@ViewBag.msg


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
