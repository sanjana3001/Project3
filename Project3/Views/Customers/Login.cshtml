@model Project3.Models.TblCustomer

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cid" />
            <div class="form-group">
                <label asp-for="Cname" class="control-label"></label>
                <input asp-for="Cname" class="form-control" />
                <span asp-validation-for="Cname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpass" class="control-label"></label>
                <input asp-for="Cpass" class="form-control" />
                <span asp-validation-for="Cpass" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@ViewBag.msg

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
